<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Meals</th>
      <th>Naps</th>
      <th>Bathroom</th>
      <th>Activities</th>
      <th>Summary</th>
      <th>Child</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.meals %></td>
        <td><%= report.naps %></td>
        <td><%= report.bathroom %></td>
        <td><%= report.activities %></td>
        <td><%= report.summary %></td>
        <td><%= report.child_id %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

