<h1 class="text-center header-bg py-5">Daily Reports</h1>
<div class="row">
  <% @reports.each do |report| %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 col-xl-3 my-2">
      <div class="card">
        <div class="card-header card-header-bg">
          <%= report.created_at %>
        </div>
        <div class="card-body bg-light">
          <h5 class="card-title">Meals</h5>
          <p class="card-text"><%= report.meals %></p>
          <h5 class="card-title">Naps</h5>
          <p class="card-text"><%= report.naps %></p>
          <h5 class="card-title">Bathroom</h5>
          <p class="card-text"><%= report.bathroom %></p>
          <h5 class="card-title">Activities</h5>
          <p class="card-text"><%= report.activities %></p>
          <h5 class="card-title">Summary</h5>
          <p class="card-text"><%= report.summary %></p>
          <%= link_to 'Edit Report', edit_report_path(report), :class => "btn btn-outline-primary btn-sm mt-1" %>
          <%= link_to 'Destroy', report, :class => "btn btn-outline-danger btn-sm mt-1", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
