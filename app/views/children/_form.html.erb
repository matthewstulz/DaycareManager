
<%= simple_form_for(@child) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <div class="field">
      <%= f.label :room_id %><br />
      <%= f.collection_select :room_id, Room.order(:title), :id, :title %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
