<div class="class col-xs-12 col-sm-9 col-md-9 col-lg-6 col-xl-4 mx-auto mt-5">
	<h2>Forgot your password?</h2>
	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<%= f.error_notification %>
	  	<div class="form-group">
	    	<%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control"}, wrapper: false, label_html: { class: "label" } %>
	    </div>
	
	  	<%= f.button :submit, "Send me reset password instructions", class:"btn btn-primary" %>
	<% end %>
	<br/>
	<%= render "devise/shared/links" %>
</div>