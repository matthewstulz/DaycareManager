<!-- Masthead -->
<header class="masthead text-white text-center">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-xl-9 mx-auto">
        <h1 class="mb-5">Keep an eye out for new and exciting features</h1>
      </div>
    </div>
  </div>
</header>
<!-- Icons Grid -->
<section class="features-icons bg-light text-center">
  <div class="container">
    <h2 class="mb-5">Welcome to your Daycare Manager</h2>
    <div class="row">
      <div class="col-lg-4">
        <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
          <div class="features-icons-icon d-flex">
            <i class="fa fa-desktop m-auto"></i>
          </div>
          <h3>At the office</h3>
          <p class="lead mb-0">Featuring the ability to adapt to any size screen!</p>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
          <div class="features-icons-icon d-flex">
            <i class="fa fa-mobile m-auto"></i>
          </div>
          <h3>On the go</h3>
          <p class="lead mb-0">Our service allows access from any device!</p>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="features-icons-item mx-auto mb-0 mb-lg-3">
          <div class="features-icons-icon d-flex">
            <i class="fa fa-book m-auto"></i>
          </div>
          <h3>Daily reports</h3>
          <p class="lead mb-0">The ability to check your child's daily reports at any given moment!</p>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Image Showcases -->
<section class="showcase">
  <div class="container-fluid p-0">
    <div class="row text-center no-gutters">
      <div class="col-lg-4 col-sm-6">
          <%= image_tag("showcase.jpeg", :class => "image-fluid showcase-img") %>
      </div>
      <div class="col-lg-4 col-sm-6">
          <%= image_tag("showcase4.jpeg", :class => "image-fluid showcase-img") %>
      </div>
      <div class="col-lg-4 col-sm-6">
          <%= image_tag("showcase2.jpeg", :class => "image-fluid showcase-img") %>
      </div>
      <div class="col-lg-4 col-sm-6">
          <%= image_tag("showcase3.jpeg", :class => "image-fluid showcase-img") %>
      </div>
      <div class="col-lg-4 col-sm-6">
          <%= image_tag("showcase1.jpeg", :class => "image-fluid showcase-img") %>
      </div>
      <div class="col-lg-4 col-sm-6">
          <%= image_tag("showcase5.jpg", :class => "image-fluid showcase-img") %>
      </div>
    </div>
  </div>
</section>
