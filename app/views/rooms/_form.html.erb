<div class="class col-xs-12 col-sm-9 col-md-9 col-lg-6 col-xl-4 mx-auto mt-5">
	<h2>New Room</h2>
	<%= simple_form_for @room, html: { multipart: true }  do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :room_image, label: "Pick an image", input_html: { class: "form-control-file", type: "file" }, wrapper: false, label_html: { class: "form-control-file" } %>
  </div>
  <div class="form-group">
    <%= f.input :title, label: "Title", input_html: { class: "form-control"}, wrapper: false, label_html: { class: "label" } %>
  </div>
  <%= f.button :submit, class:"button btn-primary" %>
</div>
<% end %>

